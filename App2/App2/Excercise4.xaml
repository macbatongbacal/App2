<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.Excercise4">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="0">
            <Label Text="Welcome to Xamarin" 
                   VerticalOptions="Center" 
                   HorizontalOptions="Center" 
                   FontSize="30"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalTextAlignment="Center"/>
            <Label Text="Cross-platform app made easy" 
                   VerticalOptions="Center" 
                   HorizontalOptions="Center" 
                   TextColor="White"
                   Opacity="0.75"
                   FontSize="18"/>
            <Button Text="Login"
                    BackgroundColor="#1dabf0"
                    TextColor="White"
                    Opacity="0.75"/>
            <Button Text="Register"
                    BackgroundColor="#1dabf0"
                    TextColor="White"
                    Opacity="0.75"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>