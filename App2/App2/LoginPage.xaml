<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.LoginPage"
             Title="Login Page">
    <ContentPage.Content>
        <StackLayout >
            <Image Aspect="Fill" Source="http://lorempixel.com/1920/1080/nature/3"/>
            <StackLayout Padding="10" Orientation="Vertical">
                <StackLayout Orientation="Horizontal">
                    <Button Text="Like"
                           TextColor="DodgerBlue"/>
                    <Button Text="Comment"
                           TextColor="DodgerBlue"/>
                    <Button Text="Share"
                           TextColor="DodgerBlue"/>
                </StackLayout>

                <BoxView Color="#f0f0f0" HeightRequest="1"/>
                <Label Text="700 Likes"
                       TextColor="DodgerBlue"/>
                <Label Text="This is a shot yesterday in Skanor, Sweden, when driving home, from a couple of days of work in Denmark"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="StartAndExpand" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>